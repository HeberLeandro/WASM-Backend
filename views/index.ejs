<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>EJS Engine</title>
  </head>
  <body>
    <p>Image Upload</p>
    <form method="post" id="formId" action="upload/post" enctype="multipart/form-data">
    <!-- <form id="formId"> -->
      <input type="file" name="image" accept="image/*"/><br /><br />
      <button type="submit" name="upload">Upload</button>
    </form>
    
    <canvas class="cv" id="mainCV" width="500" height="500"></canvas>
    <script>

      var form = document.getElementById("formId");

      form.addEventListener('submit', (e) => {
        e.preventDefault();       
  
        var formData = new FormData(form);

        fetch('http://localhost:3000/upload/post', {
          method: 'POST',
          body: formData

        }).then((resp) =>{
            resp.json().then((json) => {
              console.log(json);
            });

          }).catch((error) => {
            console.log(error);
          });

      });

    </script>
  </body>
</html>